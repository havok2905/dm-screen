{
  "name": "dm-screen",
  "version": "1.0.0",
  "description": "dm-screen is an application to leverage the speed of virtual D&D tooling to assist with running in-person TTRPGS.",
  "main": "index.js",
  "scripts": {
    "compile:server": "tsc --project tsconfig.server.json",
    "db:destroy": "rimraf db.development.sqlite",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "run:server": "node ./dist-server/server/index.js",
    "compile-client": "tsc && vite build",
    "dev-client": "vite",
    "preview-client": "vite preview",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "coverage": "jest --json --coverage --outputFile=report.json",
    "eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "stylelint": "stylelint \"src/**/*.css\"",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{tsx,ts}",
      "!**/node_modules/**",
      "!**/vite-env.ts",
      "!**/vite-env.d.ts",
      "!**/*.stories.ts",
      "!**/*.stories.tsx"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "^@core/(.*)$": "<rootDir>/src/core/$1",
      "^@designSystem/(.*)$": "<rootDir>/src/designSystem/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.js"
    ],
    "testMatch": [
      "**/src/**/*.test.ts",
      "**/src/**/*.test.tsx"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^5.50.1",
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "marked": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.24.1",
    "sequelize": "^6.37.3",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@chromatic-com/storybook": "^1.5.0",
    "@shopify/react-testing": "^5.3.0",
    "@storybook/addon-essentials": "^8.1.10",
    "@storybook/addon-interactions": "^8.1.10",
    "@storybook/addon-links": "^8.1.10",
    "@storybook/addon-onboarding": "^8.1.10",
    "@storybook/blocks": "^8.1.10",
    "@storybook/react": "^8.1.10",
    "@storybook/react-vite": "^8.1.10",
    "@storybook/test": "^8.1.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "cypress": "^13.12.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.8",
    "sequelize-cli": "^6.6.2",
    "storybook": "^8.1.10",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.2.0"
  }
}
